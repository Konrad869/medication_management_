{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "jasminewd2",
      "node"
    ],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
